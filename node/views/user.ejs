<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

    <div id="alerttt-placeholder"></div>
    <div id="user_container">
        <h1 class="page-header" id="page-header-title">User </h1>

        <h3 class="page-header">Tag</h3>
        <h4>Tag list</h4>
        <table class="table table-hover" id="tagList">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <h4>Add tag</h4>
        <div class="form-group">

             <div id="dropdownbutton" class="btn-group select select-inline mbl">
                <button class="btn dropdown-toggle clearfix btn-default btn-primary" data-toggle="dropdown">
                    <span id ="dropdownbuttonlabel" class="filter-option pull-left">Node Id</span>&nbsp;
                    <span class="caret"></span>
                </button>
                <span class="dropdown-arrow dropdown-arrow-inverse"></span>

                <ul id="dropdownmenu" class="dropdown-menu dropdown-inverse" role="menu" style="overflow-y: auto; min-height: 108px; max-height: 328px;">
                    
                </ul>
            </div>

            <div class="btn-group mbl">
                <button type="submit" class="btn btn-default" id="tagOnReader">Check tag on reader</button>
            </div>

            <br/><br/>
            <form class="form-inline" role="form">
              <div class="form-group">
                <label class="sr-only" for="tagType">Type</label>
                <input type="text" class="form-control" id="tagType" placeholder="MiFare Classic">
              </div>
              <div class="form-group">
                <label class="sr-only" for="tagValue">Value</label>
                <input type="text" class="form-control" id="tagValue" placeholder="qwerty">
              </div>
              <button type="submit" class="btn btn-default" id="form-add-tag-submit">Add tag</button>
            </form>
        </div>

        <br/><br/>
        <h3 class="page-header">User data</h3>

        <% include user_form %>

    </div>
</div> <!-- class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" -->
